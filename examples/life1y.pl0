const
  Width    = 30,
  Height   = 20,
  Percent  = 10;

var
  Map[1600], I, This, Next, Color, DColor, Q;

function GetCell(X,Y);
begin
  GetCell := Map[This+Y*Width+X];
end;

procedure SetCell(X,Y,Z);
begin
  Map[Next+Y*Width+X] := Z;
end;

procedure Paint;
var
  X,Y;
begin
  GotoXY(1,1);
  for Y := 0 to Height - 1 do
  begin
    for X := 0 to Width - 1 do
    begin
      if GetCell(X,Y) = 1 then Write("#") else Write(" ");
    end;
    WriteLn;
  end;
end;

function Alive(X,Y);
var
  L,R,U,D,C;
begin
  if X = 0 then L := Width - 1 else L := X-1;
  if Y = 0 then U := Height - 1 else U := Y-1;

  if X = Width-1 then R := 0 else R := X+1;
  if Y = Height-1 then D := 0 else D := Y+1;

  C := GetCell(L,U) + GetCell(X,U) + GetCell(R,U)
     + GetCell(L,Y)                + GetCell(R,Y)
     + GetCell(L,D) + GetCell(X,D) + GetCell(R,D);

  if (GetCell(X,Y) = 1) and (C=2) or (C=3) then Alive := 1 else Alive := 0;
end;

procedure Generation;
var
  X,Y,Temp;
begin
  Temp := This; This := Next; Next := Temp;

  for Y := 0 to Height - 1 do
    for X := 0 to Width  - 1 do
      SetCell(X,Y,Alive(X,Y));
end;

procedure Setup;
var
  X,Y;
begin
  This := 0; Next := 800;

  for Y := 0 to Height - 1 do
    for X := 0 to Width - 1 do
      if Random % 100 < Percent then
        SetCell(X,Y,1)
      else
        SetCell(X,Y,0);

  Color := 1;
  DColor := 1;
end;
  
begin
  ClrScr;
  Setup;

  for I := 1 to 1000 do
  begin
    Generation;
    TextColor(Color);
    Paint;
    Write('Generation:', I);
    Color := Color + DColor;
    if Color = 1 then DColor := -DColor else if Color = 7 then DColor := -DColor;
  end;
end.