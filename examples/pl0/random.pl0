var
  X, Y, Z;

function RollTheDice(Sides, Rolls);
var
  I, J, Sum;
begin
  I := 0;
  while I < Rolls do
  begin
    J := 1 + Random(Sides);
    ! J;
    Sum := Sum + J;
    I := I + 1;
  end;
  RollTheDice := Sum;
end;

begin
  ! "How many sides?";
  ? X;
  ! "How many rolls?";
  ? Y;
  ! "Here are your rolls:";
  Z := RollTheDice(X, Y);
  ! "The sum of your rolls is:";
  ! Z;
  ! "The average of your rolls is:";
  ! Z / Y;
end.
