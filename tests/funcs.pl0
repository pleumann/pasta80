function Max(A,B);
begin
  if A>=B then Max := A;
  if A<B then Max := B;
end;

function Min(A,B);
begin
  if A<=B then Min := A;
  if A>B then Min := B;
end;

function Sum(A);
begin
  if A=0 then Sum := 0;
  if A>0 then Sum := Sum(A-1) + A; (* 'else' would be nice *)
end;

function Fact(A);
begin
  if A=0 then Fact := 1;
  if A>0 then Fact := Fact(A-1) * A; (* ditto *)
end;

