procedure TestIfThen(A,B);
begin
  ! A;
  ! B;
  ! "Before";
  if A = B then ! "A=B";
  if A # B then ! "A#B";
  ! "After"
end;

procedure TestIfThenElse(A,B);
begin
  ! A;
  ! B;
  ! "Before";
  if A = B then ! "A=B" else ! "A#B";
  ! "After"
end;

procedure TestIfBlocks(A,B);
begin
  ! A;
  ! B;
  ! "Before";
  if A = B then
  begin
    ! "Yes,";
    ! "A";
    ! "equals B";
  end
  else
  begin
    ! "No,";
    ! "A does not";
    ! "equal B";
  end;
  ! "After"
end;

begin
  TestIfThen(0,0);
  ! "-----";
  TestIfThen(0,1);
  ! "-----";

  TestIfThenElse(0,0);
  ! "-----";
  TestIfThenElse(0,1);
  ! "-----";

  TestIfBlocks(0,0);
  ! "-----";
  TestIfBlocks(0,1);
end.
