procedure TestWhile;
var
  I, J, K: Integer;
begin
  BeginTest('TestWhile');

  I := 0;
  while False do
  begin
    I := I + 1;
  end;

  AssertInteger('Minimum iterations', 0, I);

  I := 0; J := 0;
  while J < 10 do
  begin
    J := J + 1;
    I := I + J;
  end;

  AssertInteger('Simple loop J', 10, J);
  AssertInteger('Simple loop I', 55, I);

  I := 0;
  J := 0;
  while J < 10 do
  begin
    J := J + 1;
    K := 0;
    while K < 20 do
    begin
      K := K + 1;
      I := I + J * K;
    end;
  end;

  AssertInteger('Nested loop K', 20, K);
  AssertInteger('Nested loop J', 10, J);
  AssertInteger('Nested loop I', 11550, I);

  I := 0; J := 0;
  while J < 10 do
  begin
    J := J + 1;
    if J = 4 then Continue;
    if J = 8 then Break;
    I := I + J;
  end;
  
  AssertInteger('Break/continue J', 8, J);
  AssertInteger('Break/continue I', 24, I);

  EndTest;
end;
