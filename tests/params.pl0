procedure Foo;
begin
end;

procedure Bar(A);
var
  X;
begin
  X := A;
  ! A;
  ! X;
end;

procedure Gabba(A,B);
var
  Y, Z;
begin
  Y := A;
  Z := B;
  ! A;
  ! B;
  ! Y;
  ! Z;
end;

procedure Hey(A,B,C);
var
  P, Q;

  procedure Add;
  begin
    P := A+B;
  end;

  procedure Mul;
  begin
    Q := B*C
  end;

begin
  Add;
  Mul;
  ! A;
  ! B;
  ! C;
  ! P;
  ! Q;
end;

procedure Sum(A,B);
begin
  if A=0 then ! B;
  if A>0 then Sum(A-1,A+B); (* 'else' would be nice *)
end;

procedure Fact(A,B);
begin
  if A=0 then ! B;
  if A>0 then Fact(A-1,A*B); (* ditto *)
end;

begin
  Foo;
  Bar(1);
  Gabba(2,3);
  Hey(4,5,6);
  ! 'Sum(1..5)=';
  Sum(5,0);
  ! 'Fact(5)=';
  Fact(5,1);
end.