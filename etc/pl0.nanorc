syntax pascal "\.pas|\.inc"
tabgives "  "
icolor bold,normal "\<(and|or|xor|not|mod|in)\>"
icolor bold,normal "\<(program|procedure|function|begin|end)\>"
icolor bold,normal "\<(const|type|var|record|array|of|set|string)\>"
icolor bold,normal "\<(if|then|else|for|to|downto|do|while|repeat|until)\>"
color italic,normal start="\{" end="\}"
color italic,normal start="\(\*" end="\*\)"
